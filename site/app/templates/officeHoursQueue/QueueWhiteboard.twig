{% extends 'generic/Popup.twig' %}
{% block popup_id %}whiteboard-settings{% endblock %}
{% block title %}Whiteboard{% endblock %}
{% block body %}
  <input type="hidden" name="csrf_token" value="{{ csrf_token }}"/>
  <label for="queue-whiteboard-message" class="whiteboard-setting">
    <span class="option-title">Optional whiteboard (Supports Markdown)</span>
    <br>
    <span class="option-alt">
      This is meant to simulate the whiteboard at the front of a room during office hours.<br>
      Any message typed here will show up for all students and is a good place to provide extra general information.
      Leave it empty to hide the whiteboard.
    </span>
  </label>
  <textarea class="whiteboard-setting" name="queue_whiteboard_message" id="queue-whiteboard-message">{{viewer.getQueueWhiteboardMessage()}}</textarea>
{% endblock %}
{% block form %}
  <form method="post" id="whiteboard_form" action="{{base_url}}/update_whiteboard">
    {{ parent() }}
  </form>
{% endblock %}
{% block buttons %}
  {{ block('close_button') }}
  <button id="save_whiteboard" type="submit" class="btn btn-primary">Save</button>
{% endblock %}
